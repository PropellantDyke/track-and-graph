<resources>
    <style name="Style.CheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_color</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Style.GrayButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?selectorButtonColor</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TnG.Corner.Small</item>
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Style.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">@style/ShapeAppearance.TnG.Corner.Small</item>
    </style>

    <style name="Style.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearance">@style/ShapeAppearance.TnG.FAB</item>
        <item name="tint">?colorControlNormal</item>
    </style>

    <style name="ShapeAppearance.TnG.FAB" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">1000dp</item>
    </style>

    <style name="Style.AddBarButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorControlHighlight</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TnG.Corner.Small</item>
    </style>

    <style name="Style.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.TnG.Corner.Small</item>
    </style>

    <style name="Style.WideBottomButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TnG.Corner.Small</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="Style.OverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">?attr/colorSurface</item>
    </style>

    <style name="Style.CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="Style.OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorControlNormal</item>
    </style>

    <style name="Style.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/toolbarBackgroundColor</item>
        <item name="titleTextColor">?attr/colorControlNormal</item>
    </style>

    <style name="Style.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">?attr/colorSecondary</item>
        <item name="colorControlHighlight">?attr/colorSecondary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="Style.EmptyPageHintTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Subtitle2</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Style.ExpansiveTextInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/expansive_text_box_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:inputType">textMultiLine|textAutoCorrect|textCapSentences</item>
    </style>

    <style name="FancyFormScroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/ff_layout_bg</item>
    </style>

    <style name="FancyFormLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/ff_page_padding</item>
        <item name="android:background">@color/ff_layout_bg</item>
    </style>

    <style name="FancyFormSection">
        <item name="android:padding">@dimen/ff_section_padding</item>
        <item name="android:background">@drawable/ff_section</item>
    </style>

    <style name="FancyFormHeader" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/ff_header_font_size</item>
        <item name="android:textColor">@color/ff_text</item>
    </style>

    <style name="FancyFormLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ff_text</item>
    </style>

    <style name="FancyFormError" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/ff_danger_text</item>
    </style>

    <style name="FancyFormInputText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ff_input_height</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/ff_input</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">@dimen/ff_input_font_size</item>
        <item name="android:textColor">@color/ff_input_text</item>
    </style>

    <style name="FancyFormInputMultiLine" parent="FancyFormInputText">
        <item name="android:layout_height">@dimen/ff_multiline_height</item>
    </style>

    <style name="FancyFormSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ff_input_height</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/ff_spinner</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">@dimen/ff_input_font_size</item>
        <item name="android:textColor">@color/ff_input_text</item>
    </style>

    <style name="FancyFormActionButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ff_input_height</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/ff_action_button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">@dimen/ff_input_font_size</item>
        <item name="android:textColor">@color/ff_button_text</item>
        <item name="android:elevation">0dp</item>
        <item name="shapeAppearance">@null</item>
    </style>

    <style name="FancyFormSwitch">
        <item name="android:textColorLink">@color/ff_color_vivid</item>
        <item name="android:minHeight">0dp</item>
    </style>
</resources>
